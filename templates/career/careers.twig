{% extends 'base/baseTemplate.twig' %}
{% block content %}
    <div class="row">
        <div class="col-lg-12" id="careers">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 id="subjectName"></h3>
                </div>
                <div class="panel-body">
                    <div class="clearfix"></div>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered dt-responsive nowrap" id="careersList">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Carrera</th>
                                <th>Cantidad de materias</th>
                            </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $( document ).ready(function() {
            loadCareers();
        });

        function loadCareers()
        {
            $('#careersList').dataTable( {
                "destroy": true,
                "data":{{ data | raw}},
                "columns": [
                    {"data": "id"},
                    {"data": "name"},
                    {"data": "quantity"}
                ],
                "language": {
                    "url": "{{ path_for('datatable.languaje') }}"
                }
            } );
        }
    </script>
{% endblock %}