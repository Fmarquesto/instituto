{% extends 'base/baseTemplate.twig' %}
{% block content %}
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">Registracion</div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form" action="{{ path_for('auth.signup') }}" method="post" autocomplete="off">
                            <div class="form-group{{ errors.name ? ' has-error': ''}}">
                                <label>Nombre</label>
                                <input class="form-control" name="name" value="{{ old.name }}">
                                {% if errors.name %}
                                    <span class="help-block">{{ errors.name | first }}</span>
                                {% endif %}
                            </div>
                            <div class="form-group{{ errors.username ? ' has-error': ''}}">
                                <label>Usuario</label>
                                <input class="form-control" name="username" value="{{ old.username }}">
                                {% if errors.username %}
                                    <span class="help-block">{{ errors.username | first }}</span>
                                {% endif %}
                            </div>
                            <div class="form-group{{ errors.doc ? ' has-error':'' }}">
                                <label>Documento</label>
                                <input class="form-control" name="doc" value="{{ old.doc }}">
                                {% if errors.doc %}
                                    <span class="help-block">{{ errors.doc | first }}</span>
                                {% endif %}
                            </div>
                            <div class="form-group{{ errors.enrollment ? ' has-error':'' }}">
                                <label>Matricula</label>
                                <input class="form-control" name="enrollment" value="{{ old.enrollment }}">
                                {% if errors.enrollment %}
                                    <span class="help-block">{{ errors.enrollment | first }}</span>
                                {% endif %}
                            </div>
                            <div class="form-group{{ errors.password ? ' has-error':'' }}">
                                <label>Contrase√±a</label>
                                <input class="form-control" name="password" type="password" value="{{ old.password }}">
                                {% if errors.password %}
                                    <span class="help-block">{{ errors.password | first }}</span>
                                {% endif %}
                            </div>
                            <button type="submit" class="btn btn-lg btn-success btn-block">Continuar</button>
                            {{ csrf.field | raw }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}